{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "clusterName": {
            "type": "string",
            "defaultValue":"acm-aks",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the Managed Cluster resource."
            }
        },
        "osDiskSizeGB": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "Disk size (in GB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize."
            },
            "minValue": 0,
            "maxValue": 1023
        },
        "agentCount": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "The number of nodes for the cluster."
            },
            "minValue": 1,
            "maxValue": 50
        },
        "agentVMSize": {
            "type": "string",
            "defaultValue": "Standard_DS2_v2",
            "metadata": {
                "description": "The size of the Virtual Machine."
            }
        },
        "servicePrincipalClientId": {
            "defaultValue": "7806046f-fdb1-4a22-9582-5eaca1d7ff6d",
            "metadata": {
                "description": "Client ID (used by cloudprovider)"
            },
            "type": "securestring"
        },
        "servicePrincipalClientSecret": {
            "defaultValue": "c54917bf-3fd4-4c86-bdf6-c036082113d1",
            "metadata": {
                "description": "The Service Principal Client Secret."
            },
            "type": "securestring"
        },
        "acrAdminUserEnabled": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
              "description": "Enable admin user that have push / pull permission to the registry."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2018-03-31",
            "type": "Microsoft.ContainerService/managedClusters",
            "location": "[parameters('location')]",
            "name": "[parameters('clusterName')]",
            "properties": {
                "kubernetesVersion": "1.14.4",
                "dnsPrefix": "acm",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
                        "count": "[parameters('agentCount')]",
                        "vmSize": "[parameters('agentVMSize')]",
                        "osType": "Linux",
                        "storageProfile": "ManagedDisks"
                    }
                ],
                "servicePrincipalProfile": {
                    "clientId": "[parameters('servicePrincipalClientId')]",
                    "Secret": "[parameters('servicePrincipalClientSecret')]"
                }
            },
            "enableNonSslPort": {
                "type": "bool",
                "defaultValue": false,
                "metadata": {
                  "description": "A boolean value that indicates whether to allow access via non-SSL ports."
                }
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "acm-cache",
            "type": "Microsoft.Cache/Redis",
            "location": "[resourceGroup().location]",
            "properties": {
              "enableNonSslPort": "[parameters('enableNonSslPort')]",
              "sku": {
                "capacity": 1,
                "family": "C",
                "name": "Basic"
              }
            }
        },
        {
            "name": "acmregistry2019",
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "comments": "Container registry for storing docker images",
            "tags": {
              "displayName": "Container Registry",
              "container.registry": "acmregistry2019"
            },
            "sku": {
              "name": "Basic",
              "tier": "Basic"
            },
            "properties": {
              "adminUserEnabled": "[parameters('acrAdminUserEnabled')]"
            }
          }
    ],
    "outputs": {
        "controlPlaneFQDN": {
            "type": "string",
            "value": "[reference(parameters('clusterName')).fqdn]"
        }
    }
}